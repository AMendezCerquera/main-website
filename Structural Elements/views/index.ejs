<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Articles</title>
</head>
<body>
    <h1>Articles</h1>
    <% if (articles.length > 0) { %>
        <% articles.forEach(function(article) { %>
            <div class="article">
                <h2><%= article.title %></h2>
                <p><%= article.content %></p>
            </div>
        <% }); %>
    <% } else { %>
        <p>No articles found</p>
    <% } %>
</body>
</html>